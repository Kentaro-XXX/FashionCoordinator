    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/button_scan_ok"
        android:layout_marginBottom="34dp"
        android:layout_alignParentBottom="true"
        bootstrap:bb_type="info"
        android:textSize="24sp"
        android:layout_centerHorizontal="true" />

    <!--
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/button_scan_home"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
-->
    <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:text=""
        bootstrap:bb_icon_right="fa-home"
        bootstrap:bct_size="small"
        bootstrap:bct_image="@drawable/home_icon_128"
        android:id="@+id/button_scan_home" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/nfc_connection_shirt"
        android:layout_alignLeft="@+id/button_scan_home"
        android:layout_alignStart="@+id/button_scan_home"
        android:layout_below="@+id/button_scan_home"
        android:layout_above="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NFCスキャンしてください"
        android:id="@+id/textView2"
        android:layout_marginBottom="63dp"
        android:layout_above="@+id/button_scan_ok"
        android:layout_centerHorizontal="true" />

